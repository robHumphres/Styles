<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.forexamplejohn.stylezv2.TradeFragment">

    <Button
        android:id="@+id/accessoriesButton"
        android:text="Accessories"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="3dp"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/topsButton"
        android:text="Tops"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="160dp"
        android:layout_marginRight="28dp"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/jewelryButton"
        android:text="Jewelry"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_gravity="left|top"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="28dp"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/dressesButton"
        android:text="Dresses"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="25dp"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/shoesButton"
        android:text="Shoes"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/bottomsButton"
        android:text="Bottoms"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="25dp"
        android:onClick="onClick"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User name"
        android:id="@+id/userNameTextView"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rank:"
        android:id="@+id/rankingNumber"
        android:layout_gravity="center"
        android:layout_marginTop="55dp" />

    <ImageView
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:id="@+id/usersPictureImageView"
        android:layout_gravity="center"
        android:src="@drawable/genericprofile"
        android:layout_marginTop="-15dp" />

</FrameLayout>
